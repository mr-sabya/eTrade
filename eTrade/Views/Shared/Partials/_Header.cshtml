@if (ViewData["Title"] == "Home")
{
    <header class="header axil-header header-style-2">
        <partial name="_TopCampaign.cshtml" />
        <!-- Start Header Top Area  -->
        <div class="axil-header-top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-2 col-sm-3 col-5">
                        <partial name="_Logo.cshtml" />
                    </div>
                    <div class="col-lg-10 col-sm-9 col-7 pe-0">
                        <div class="header-top-dropdown dropdown-box-style">
                            <div class="axil-search">
                                <button type="submit" class="icon wooc-btn-search">
                                    <i class="far fa-search"></i>
                                </button>
                                <input type="search" class="placeholder product-search-input" name="search2" id="search2" value="" maxlength="128" placeholder="What are you looking for...." autocomplete="off">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Header Top Area  -->
        <!-- Start Mainmenu Area  -->
        <div class="axil-mainmenu aside-category-menu">
            <div class="container">
                <div class="header-navbar">
                    <div class="header-nav-department">
                        <aside class="header-department">
                            <button class="header-department-text department-title">
                                <span class="icon"><i class="fal fa-bars"></i></span>
                                <span class="text">Categories</span>
                            </button>
                            <nav class="department-nav-menu">
                                <button class="sidebar-close"><i class="fas fa-times"></i></button>
                                <ul class="nav-menu-list">
                                    
                                    @foreach (var department in ViewBag.Departments)
                                    {
                                        @if(department.categories.Count > 0)
                                        {
                                            <li>
                                                <a asp-controller="Department" asp-action="Details" asp-route-slug="@department.Slug" class="nav-link has-megamenu">
                                                    <span class="menu-icon"><img src="~/Image/@department.Image" alt="@department.Name"></span>
                                                    <span class="menu-text">@department.Name</span>
                                                </a>
                                                <div class="department-megamenu">
                                                    <div class="department-megamenu-wrap">
                                                        <div class="department-submenu-wrap">

                                                            @foreach (var category in department.categories)
                                                            {
                                                                <div class="department-submenu">
                                                                    <h3 class="submenu-heading">@category.Name</h3>
                                                                    <ul>
                                                                        @foreach (var subcategory in category.subCategories)
                                                                        {
                                                                            <li><a href="shop.html">@subcategory.Name</a></li>
                                                                        }

                                                                    </ul>
                                                                </div>
                                                            }


                                                        </div>
                                                        <div class="featured-product">
                                                            <h3 class="featured-heading">Featured</h3>
                                                            <div class="product-list">
                                                                <div class="item-product">
                                                                    <a href="#"><img src="assets/images/product/product-feature1.png" alt="Featured Product"></a>
                                                                </div>
                                                                <div class="item-product">
                                                                    <a href="#"><img src="assets/images/product/product-feature2.png" alt="Featured Product"></a>
                                                                </div>
                                                                <div class="item-product">
                                                                    <a href="#"><img src="assets/images/product/product-feature3.png" alt="Featured Product"></a>
                                                                </div>
                                                                <div class="item-product">
                                                                    <a href="#"><img src="assets/images/product/product-feature4.png" alt="Featured Product"></a>
                                                                </div>
                                                            </div>
                                                            <a href="#" class="axil-btn btn-bg-primary">See All Offers</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                        else
                                        {
                                            <li>
                                                <a href="#" class="nav-link">
                                                    <span class="menu-icon"><img src="~/Image/@department.Image" alt="Department"></span>
                                                    <span class="menu-text">@department.Name</span>
                                                </a>
                                            </li>
                                        }

                                }

                                </ul>
                            </nav>
                        </aside>
                    </div>
                    <partial name="_MainMenu.cshtml" />
                    <partial name="_HeaderAction.cshtml" />
                </div>
            </div>
        </div>
        <!-- End Mainmenu Area  -->
    </header>
}
else
{
    <header class="header axil-header header-style-5">
        <partial name="_TopCampaign.cshtml" />
        <!-- Start Mainmenu Area  -->
        <div id="axil-sticky-placeholder"></div>
        <div class="axil-mainmenu">
            <div class="container">
                <div class="header-navbar">
                    <partial name="_Logo.cshtml" />
                    <partial name="_MainMenu.cshtml" />
                    <partial name="_HeaderAction.cshtml" />
                </div>
            </div>
        </div>
        <!-- End Mainmenu Area -->

    </header>
}